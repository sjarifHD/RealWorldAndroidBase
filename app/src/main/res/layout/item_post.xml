<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_in_between"
    android:paddingBottom="@dimen/margin_in_between">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/AppTheme.PostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_in_between"
            android:text="Suatu Judul yang cukup panjang sekali banget ya" />

        <TextView
            android:id="@+id/tvAuthor"
            style="@style/AppTheme.PostAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_in_between"
            android:text="Agahari" />

        <TextView
            android:id="@+id/tvCreatedAt"
            style="@style/AppTheme.PostCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13 Maret 2020" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_marginStart="@dimen/margin_in_between"
        app:srcCompat="@drawable/ic_bookmark_border_grey_24dp" />

</LinearLayout>